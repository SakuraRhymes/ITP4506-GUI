<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="2D Shapes" Height="400" Width="500">
    <Canvas Height="300" Width="450" Margin="0, 0, 100, 0">

        <Line
        X1="20" Y1="20"
        X2="80" Y2="80"
        Stroke="Red"
        StrokeThickness="5" />
        <Line
        X1="90" Y1="60"
        X2="200" Y2="60"
        Stroke="Green"
        StrokeThickness="8" />
        <Ellipse
      Fill="Orange"   Height="100" Width="200"
      Canvas.Left="250"
      StrokeThickness="3"
      Stroke="Red"/>

        <Rectangle Canvas.Left="50" Canvas.Top="150"
             Width="200" Height="80" StrokeThickness="5"  Stroke="Blue" Fill="Yellow" MouseDown="Rectangle_MouseDown"/>

        <Path Stroke="Black" StrokeThickness="3" 
        Data="M 75,120 C 200,50 300,75 350,180" />

        <Polygon Fill="Green" Stroke="Red" StrokeThickness="3"
              Points="350,200 300,280 400,280" />


    </Canvas>

</Window>
