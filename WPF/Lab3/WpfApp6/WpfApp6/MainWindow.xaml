<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Canvas>
        <Polygon Fill="LightBlue" Stroke="Red" StrokeThickness ="5"
      	Points="50,50 300,50 300,200 50,200"/>
       
        
        <Ellipse Canvas.Top="50" Canvas.Left="50"
          		 Fill="Green" Height="150" Width="250"
            		 StrokeThickness="4" Stroke="Purple"/>


        <MediaElement 
      Source="media/Bear.wmv" 
       Width="250" 
       Height="150" 
            Canvas.Left="50"
            Canvas.Top="202"
            Stretch="Fill"/> 


    </Canvas>
</Window>
